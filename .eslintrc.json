{
    "plugins": [
        "import",
        "rpgmaker"
    ],
    "extends": [
        "airbnb-base"
    ],
    "env": {
        "browser": true,
        "node": true,
        "rpgmaker/mv": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-use-before-define": 0,
        "comma-dangle": 0,
        "no-plusplus": 0,
        "no-param-reassign": 0,
        "spaced-comment": 0,
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ],
        "max-statements": [
            "error",
            10
        ],
        "no-return-assign": [
            "error",
            "except-parens"
        ],
        "no-cond-assign": [
            "error",
            "except-parens"
        ],
        "func-names": 0,
        "no-underscore-dangle": 0,
        "camelcase": 0
    }
}