{
    "name": "mv-plugins",
    "version": "0.0.0",
    "description": "JavaScript Plugin Collection for RPG Maker MV",
    "main": "/game/index.js",
    "scripts": {
        "serve": "cd ./game && live-server",
        "clean:dist": "rimraf -rf ./dist/WAY_*",
        "clean:game": "rimraf -rf ./game/js/plugins/WAY_*",
        "clean": "npm run clean:game && npm run clean:dist",
        "build:dist":
            "babel ./src --presets env,airbnb --plugins transform-es2015-parameters -d ./dist",
        "build:game":
            "babel ./src --presets env,airbnb --plugins transform-es2015-parameters -d ./game/js/plugins/",
        "build": "npm run build:game && npm run build:dist",
        "watch":
            "babel ./src --presets env,airbnb --plugins transform-es2015-parameters -d ./game/js/plugins/ --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/waynee95/mv-plugins.git"
    },
    "author": "waynee95",
    "bugs": {
        "url": "https://github.com/waynee95/mv-plugins/issues"
    },
    "homepage": "https://github.com/waynee95/mv-plugins#readme",
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-es2015-parameters": "^6.24.1",
        "babel-preset-airbnb": "^2.4.0",
        "babel-preset-env": "^1.6.0",
        "browser-sync": "^2.18.13",
        "eslint": "^4.9.0",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^2.6.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-rpgmaker": "^1.0.2",
        "live-server": "^1.2.0",
        "rimraf": "^2.6.2"
    },
    "dependencies": {
        "eslint-import-resolver-node": "^0.3.1"
    }
}
